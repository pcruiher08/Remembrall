mixin accountMenu()
	input(type='text' name='search' id='search-field')
	input(type='submit' class='button' value='Buscar' id='search-btn')
	a(href=`/${user.username}` class='nav_link') #{(user.name || user.username).split(' ')[0]}
	.dropdown
		.dropbtn
			a(href=`/${user.username}`)
				img.avatar_top(src=`/uploads/${'no-avatar.jpg' || user.avatar}` alt="picture3") 
		.dropdown-content
			a(href='/') Home
			a(href=`/${user.username}`) Profile
			a(href='/account') Settings
			a(href='/logout') Exit

	script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
	script(src="/js/search.js")