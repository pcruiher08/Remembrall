mixin tweetForm()
	form.tweet_card(action='/tweet' method='POST')
		.tweet_avatar
			img(src=`/uploads/${ 'no-avatar.jpg' || user.avatar}` alt="picture")
		.tweet_text
			textarea(name='tweet' class='tweet_textarea' placeholder='What are your thoughts?..' maxlength="140" rows='3' required)
			.tweet_button
				input(type='submit' class='button tweet_button' value='Remember')
